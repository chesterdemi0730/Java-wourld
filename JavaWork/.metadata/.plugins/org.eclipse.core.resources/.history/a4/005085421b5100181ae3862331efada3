
public class FromatDemo {
	public static void main(String[] args) {

		String str1 = null;  
		String str2 = null;
		
		// 姒・痞r才  
		str1 = String.format("姒“鸭$酣膝巍G%1$d,%2$d,%3$s", 99,44,"abc");  
		str2 = String.format("str2: %1$s,%2$d", "This is a test" , 100);
		
		// 块Xr才昱芏q  
		System.out.println(str1);
		
		System.out.println(str2);
		
		System.out.printf("陪ボタt计翰鸥埂G%+dP%d%n", 99,-99);  
		  
		System.out.printf("程航s腹OG%03d%n", 7);  
		  
		System.out.printf("Tab龄寒莫GOG% 8d%n", 7);  
		  
		System.out.printf("俱计だ舱寒莫GOG%,d%n", 9989997);  
		  
		System.out.printf("@セ血夯娆OG%2.2fじ%n", 49.8); 
		
	}

}
