import java.util.Date;
import java.util.Locale;

public class TimeDemo {
	
	public static void main(String[] args) {
		
		Date date = new Date();
		
		System.out.printf("2旒痞r24扫瞠氦p (e干02): %tH%n",date);  
		   
		System.out.printf("2旒痞r12扫瞠氦p (e干02): %tI%n",date);  
		
		System.out.printf("2旒痞r24扫瞠氦p: %tk%n",date);  
		  
		System.out.printf("2旒痞r12扫瞠氦p: %tl%n",date);  
		  
		System.out.printf("2旒痞r氦滥 (e干02): %tM%n",date);  
		  
		System.out.printf("2旒痞r含 (e干02): %tS%n",date);  
		  
		System.out.printf("3旒痞r翰@ (e干03): %tL%n",date);  
		  
		System.out.printf("9旒痞r翰@砑 (e干09): %tN%n",date); 
		
		String str = String.format(Locale.US, "pgrダ氦WとUと夹O: %tp" , date);
		System.out.println(str);
		
	}
}
